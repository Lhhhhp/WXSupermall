swiper{
  height: 720rpx;
}
swiper image{
  width: 100%;
  height: 100%;
}
.info-cont{
  background: white;
  padding: 20rpx;
}
.info-cont .goods-name{
  padding: 10rpx 10rpx 0;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  font-weight: bold;
}
.info-cont .price-cont{
  padding: 10rpx 10rpx 20rpx;
  display: flex;
  align-items: center;
}
.info-cont .price{
  color: #ff8019;
  font-weight: bold;
  font-size: 32rpx;
}